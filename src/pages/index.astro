---
import Layout from '../layouts/Layout.astro';
---
<Layout title="Home">
  <div class="text-center max-w-2xl mx-auto mt-12">
    <h1 class="text-5xl font-bold text-emerald-800 mb-6">Welcome to KP Family Chit Fund</h1>
    <p class="text-xl text-gray-600 mb-8">
      Manage your monthly chit fund draws with transparency and ease.
    </p>
    <div class="flex justify-center gap-4">
      <a href="/lucky-draw" class="bg-emerald-600 text-white px-8 py-3 rounded-full font-bold text-lg shadow-lg hover:bg-emerald-700 transition transform hover:scale-105">
        Go to Lucky Draw
      </a>
    </div>
  </div>
</Layout>